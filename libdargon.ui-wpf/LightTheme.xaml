<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Dargon.UI.WPF">
   <ResourceDictionary.MergedDictionaries>
      <ResourceDictionary Source="FlatColors.xaml" />
   </ResourceDictionary.MergedDictionaries>
   <Color A="255" R="250" G="250" B="250" x:Key="ChromeBackgroundColor" />
   <SolidColorBrush x:Key="ChromeBackgroundBrush" Color="{StaticResource ChromeBackgroundColor}" />
   <Color A="255" R="0" G="0" B="0" x:Key="ChromeForegroundColor" />
   <SolidColorBrush x:Key="ChromeForegroundBrush" Color="{StaticResource ChromeForegroundColor}" />
</ResourceDictionary>