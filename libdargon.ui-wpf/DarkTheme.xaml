<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Dargon.UI.WPF">
   <ResourceDictionary.MergedDictionaries>
      <ResourceDictionary Source="FlatColors.xaml" />
   </ResourceDictionary.MergedDictionaries>
   <Color A="255" R="47" G="47" B="52" x:Key="ChromeBackgroundColor" />
   <SolidColorBrush x:Key="ChromeBackgroundBrush" Color="{StaticResource ChromeBackgroundColor}" />
   <Color A="255" R="255" G="255" B="255" x:Key="ChromeForegroundColor" />
   <SolidColorBrush x:Key="ChromeForegroundBrush" Color="{StaticResource ChromeForegroundColor}" />
</ResourceDictionary>