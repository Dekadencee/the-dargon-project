<ResourceDictionary
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:local="clr-namespace:Dargon.UI.Accordion"
   mc:Ignorable="d">
   <ResourceDictionary.MergedDictionaries>
      <ResourceDictionary Source="../DargonUI.xaml"/>
   </ResourceDictionary.MergedDictionaries>
   
   <Style TargetType="{x:Type local:Expandable}">
      <Setter Property="Template">
         <Setter.Value>
            <ControlTemplate TargetType="ContentControl">
               <Grid>
                  <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition/>
                  </Grid.RowDefinitions>
                  <Button Grid.Row="0" HorizontalContentAlignment="Left" Padding="5px,1px,0px,1px">
                     <TextBlock Text="{Binding Path=Text, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Expandable}}, FallbackValue=_Text_}"></TextBlock>
                  </Button>
                  <Border Grid.Row="1" BorderThickness="1,0,1,1" BorderBrush="{StaticResource GenericBorderBrush}">
                     <ContentPresenter/>
                  </Border>
               </Grid>
            </ControlTemplate>
         </Setter.Value>
      </Setter>
   </Style>
</ResourceDictionary>